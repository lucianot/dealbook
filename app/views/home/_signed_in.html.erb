<div class="title">
  <h3>Recent Updates</h3>
</div>

<% if @deals.empty? %>
  <p>No updates.</p><br>
<% else %>
  <table class="table">
    <tbody>
    <% @deals.each do |deal| %>
      <tr class="update_row">
        <td>
          <%= link_to deal.headline, deal_path(deal)  %>
          <span class="update_close_date"><%= "(#{deal.close_date.strftime("%b %y")})" %>
          <div class="update_updated"><%= "Updated on #{deal.updated_at.strftime("%d %b %y")}" %></div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>