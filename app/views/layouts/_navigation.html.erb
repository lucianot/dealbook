<div class="navbar">
  <div class="navbar-inner">
    <div class="container">

      <%= link_to image_tag('dealbook_logo.png'), root_path, :class => 'brand' %>

      <%= simple_form_for :search, :url => url_for(:action => 'create', :controller => 'searches'),
        :method => 'post', :html => { :class => 'navbar-search' } do |f| %>
        <%= f.input_field :keywords, :label => false, :autofocus => true, :placeholder => 'Search',
            :class =>  'search-query span3' %>
      <% end %>

      <ul class="nav pull-right">
        <% if user_signed_in? %>
          <li class="dropdown" id="menu7">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_user.full_name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if can? :manage, User %>
                <li><%= link_to('Manage users', users_path) %></li>
                <li class="divider"></li>
              <% end %>
              <li><%= link_to 'Edit my account', edit_user_registration_path %></li>
              <li><%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to('Login', new_user_session_path)  %></li>
          <li><%= link_to('Sign up', new_user_registration_path)  %></li>
        <% end %>
      </ul>

    </div>
  </div>
</div>

<div class="subnav subnav-fixed">
  <ul class="nav nav-pills">
      <%= nav_link 'Deals', deals_path %>
      <%= nav_link 'Companies', companies_path %>
      <%= nav_link 'Investors', investors_path %>
      <% if user_signed_in? %>
        <%= nav_link('Markets', markets_path) if can? :manage, Market %>
        <%= nav_link('Locations', locations_path) if can? :manage, Location %>
      <% end %>
  </ul>
</div>
