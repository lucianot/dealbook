<div class="title">
  <h3><%= @company.name %></h3>
</div>

<table class="table table-bordered table-condensed">
  <tbody>
    <tr><td>Description</td><td><%= @company.description %></td></tr>
    <tr><td>Website</td>    <td><%= link_to "#{@company.website}", @company.website %></td></tr>
    <tr><td>Linkedin</td>   <td><%= link_to "#{@company.linkedin}", @company.linkedin %></td></tr>
    <tr><td>Status</td>     <td><%= @company.status %></td></tr>
    <tr><td>Markets</td>    <td><%= @company.markets_names %></td></tr>
    <tr><td>Locations</td>  <td><%= @company.locations_names %></td></tr>
    <tr><td>Investors</td>
        <td><%= render :partial => 'buyers', :locals => { :buyers => @company.buyers } %> </td>
    </tr>
    <tr><td>Deals</td>      <td><%= render "offers" %></td></tr>
    <tr><td>Investments</td><td><%= render "investments" %></td></tr>
  </tbody>
</table>

<p><%= link_to("+ Add new deal", new_deal_path) if can? :create, Deal %></p>
<br>

<% if can? :edit, Company %>
  <%= link_to 'Edit', edit_company_path %> |
<% end %>
<% if can? :destroy, Company %>
  <%= link_to 'Destroy', @company, :data => { :confirm => 'Are you sure?' }, :method => :delete %> |
<% end %>
<%= link_to 'Back', :back %>
