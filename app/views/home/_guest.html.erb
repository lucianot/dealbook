<div class="span12 center-field">
  <h1>The ultimate resource for tech deals in Brazil</h1>
    <h3>100% crowdsourced</h3>
     <div class="signup_button">
      <p>
        <%= link_to('Join Now', "#joinNow", :data => {:toggle => 'modal'}, :id => 'signup_link', :class => 'btn btn-info btn-large') %>
      </p> 
    </div>
</div>

<div class="row">

  <div class="span4">
    <div class="well well-index">
      <h3>Browse the full database</h3>
      <table class="table table-condensed stats">
        <tbody>
          <tr class="update_row">
            <td><h3 class="counter"><%= @deal_count %></h3></td>
            <td><h3><%= link_to 'Deals', deals_path %></h3></td>
          </tr>
          <tr class="update_row">
            <td><h3 class="counter"><%= @company_count %></h3></td>
            <td><h3><%= link_to 'Companies', companies_path %></h3></td>
          </tr>
          <tr class="update_row">
            <td><h3 class="counter"><%= @investor_count %></h3></td>
            <td><h3><%= link_to 'Investors', investors_path %></h3></td>
          </tr>
          <tr class="update_row">
            <td><h3 class="counter"><%= @user_count %></h3></td>
            <td><h3><a href="#">Collaborators</a></h3></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="span4">
    <div class="well well-index">
      <h3>Get all the recent updates</h3>
      <% if @deals.empty? %>
      <p>No updates.</p><br>
      <% else %>
      <table class="table">
        <tbody>
        <% @deals.take(2).each do |deal| %>
        <tr class="update_row">
          <td>
            <%= link_to deal.headline, deal_path(deal)  %>
            <span class="update_close_date"><%= "(#{deal.close_date.strftime("%b %y")})" %></span>
            <div class="update_updated"><%= "Updated on #{deal.updated_at.strftime("%d %b %y")}" %></div>
          </td>
        </tr>
        <% end %>
        <tr>
          <td>
            <%= link_to "More...", new_user_session_path %>
          </td>
        </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>

  <div class="span4">
    <div class="well well-index">
      <h3>More reasons to sign up</h3>
      <ul class="index-list">
        <li>Receive <b>all the latest updates</b> on tech venture capital and M&A deals</li>
        <li>Become part of a <b>vibrant open-source community</b> that brings more transparency and liquidity to the market</li>
        <li>It's completely <b>free</b></li>
      </ul>
      <div class="reasons_signup">
        <%= link_to('Join Now!', "#joinNow", :data => {:toggle => 'modal'}) %>
      </div>
    </div>
  </div>
</div>  

<div class="clear">
</div>


