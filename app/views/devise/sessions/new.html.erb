<div class="title form-title">
  <h3>Sign in</h3>
</div>

<div class="span6">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name),
  :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
  </div>
<% end %>
<div class="bottom-links">
  <%= render :partial => "devise/shared/links" %>
</div>
</div>
<h3> Or sign in using </h3>
<a href="/auth/twitter" class="auth_provider">
  <%= image_tag "twitter_64.png", :size => "64x64", :alt => "Twitter" %>
  Twitter
</a>
<a href="/auth/linkedin" class="auth_provider">
  <%= image_tag "linkedin_64.png", :size => "64x64", :alt => "Linkedin" %>
  Linkedin
</a>


